---
import '../styles/global.css';

const { pageTitle, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-ctp-base">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
			rel="stylesheet"
		/>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={description} />
	</head>

	<body class="min-h-screen w-screen bg-ctp-base text-ctp-text flex flex-col font-sans">
		<main class="w-full flex-grow">
			<slot />
		</main>

		<footer class="flex justify-center pt-8 pb-4">
			<p class="text-sm">
				&copy; {new Date().getFullYear()} Tom Hanover | <a href="https://github.com/thanover/webpage-astro" class="underline hover:text-ctp-teal">Source Code</a>
			</p>
		</footer>
	</body>
</html>
