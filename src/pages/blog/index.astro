---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export const prerender = true;

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<BaseLayout pageTitle="Blog - Thomas Hanover" description="Blog posts by Thomas Hanover">
	<div class="p-6">
		<div class="max-w-4xl mx-auto">
			<header class="mb-12">
				<a href="/" class="text-cyan-300 hover:text-cyan-200 inline-flex items-center mb-6">
					<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
					</svg>
					Back to Home
				</a>
				<h1 class="text-5xl font-bold mb-4">Blog</h1>
				<p class="text-xl text-slate-300 mb-6">Thoughts on being a Dad, software engineer and whatever else</p>

				<div class="relative mb-4">
					<input
						type="text"
						id="searchInput"
						placeholder="Search by title, description, or tags..."
						class="w-full px-4 py-3 pl-12 bg-cyan-800/30 backdrop-blur-sm rounded-lg text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-cyan-500"
					/>
					<svg class="absolute left-4 top-3.5 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
					</svg>
				</div>
				<p id="resultCount" class="text-slate-300"></p>
			</header>

			<div id="results" class="space-y-6">
				{sortedPosts.map((post) => (
					<article class="bg-cyan-800/30 backdrop-blur-sm rounded-lg p-6 shadow-lg hover:bg-cyan-800/40 transition-colors">
						<a href={`/blog/${post.slug}`} class="group">
							<h2 class="text-2xl font-bold mb-2 group-hover:text-cyan-300 transition-colors">
								{post.data.title}
							</h2>
							<p class="text-slate-300 mb-3">{post.data.description}</p>
							<div class="flex items-center gap-4 text-sm text-slate-400">
								<time datetime={post.data.pubDate.toISOString()}>
									{post.data.pubDate.toLocaleDateString('en-US', {
										year: 'numeric',
										month: 'long',
										day: 'numeric',
										timeZone: 'UTC'
									})}
								</time>
								{post.data.tags && (
									<div class="flex gap-2">
										{post.data.tags.map((tag) => (
											<a
												href={`/blog/tag/${tag}`}
												class="bg-cyan-700 px-2 py-1 rounded text-xs hover:bg-cyan-600 transition-colors"
											>
												{tag}
											</a>
										))}
									</div>
								)}
							</div>
						</a>
					</article>
				))}
			</div>
		</div>
	</div>

		<script define:vars={{ posts: sortedPosts }}>
			const searchInput = document.getElementById('searchInput');
			const resultsContainer = document.getElementById('results');
			const resultCount = document.getElementById('resultCount');

			function formatDate(dateString) {
				const date = new Date(dateString);
				return date.toLocaleDateString('en-US', {
					year: 'numeric',
					month: 'long',
					day: 'numeric',
					timeZone: 'UTC'
				});
			}

			function renderPosts(postsToRender) {
				if (postsToRender.length === 0) {
					resultsContainer.innerHTML = '<div class="text-center py-12"><p class="text-xl text-slate-300">No posts found matching your search.</p></div>';
					resultCount.textContent = '';
					return;
				}

				resultCount.textContent = `${postsToRender.length} ${postsToRender.length === 1 ? 'post' : 'posts'}`;

				resultsContainer.innerHTML = postsToRender.map(post => `
					<article class="bg-cyan-800/30 backdrop-blur-sm rounded-lg p-6 shadow-lg hover:bg-cyan-800/40 transition-colors">
						<a href="/blog/${post.slug}" class="group">
							<h2 class="text-2xl font-bold mb-2 group-hover:text-cyan-300 transition-colors">
								${post.data.title}
							</h2>
							<p class="text-slate-300 mb-3">${post.data.description}</p>
							<div class="flex items-center gap-4 text-sm text-slate-400">
								<time datetime="${post.data.pubDate}">
									${formatDate(post.data.pubDate)}
								</time>
								${post.data.tags ? `
									<div class="flex gap-2">
										${post.data.tags.map(tag => `
											<a
												href="/blog/tag/${tag}"
												class="bg-cyan-700 px-2 py-1 rounded text-xs hover:bg-cyan-600 transition-colors"
											>
												${tag}
											</a>
										`).join('')}
									</div>
								` : ''}
							</div>
						</a>
					</article>
				`).join('');
			}

			function searchPosts(query) {
				if (!query.trim()) {
					renderPosts(posts);
					return;
				}

				const lowerQuery = query.toLowerCase();
				const filtered = posts.filter(post => {
					const titleMatch = post.data.title.toLowerCase().includes(lowerQuery);
					const descMatch = post.data.description.toLowerCase().includes(lowerQuery);
					const tagsMatch = post.data.tags?.some(tag => tag.toLowerCase().includes(lowerQuery));

					return titleMatch || descMatch || tagsMatch;
				});

				renderPosts(filtered);
			}

			searchInput.addEventListener('input', (e) => {
				searchPosts(e.target.value);
			});

			// Initial render
			renderPosts(posts);
		</script>
</BaseLayout>
