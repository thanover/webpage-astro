---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="Thomas Hanover" description="Personal website of Thomas Hanover">
	<div class="flex flex-col justify-center min-h-[calc(100vh-80px)]">
		<div class="flex justify-center p-6">
			<img class="rounded-full flex w-56 content-center justify-center" alt="profile picture" loading="lazy" decoding="async" src="/img/profile.jpeg" width="600" height="590" />
		</div>
		<div class="flex justify-center">
			<p class="font-bold text-4xl sm:text-3xl">
				Thomas Hanover
			</p>
		</div>
		<div class="flex justify-center">
			<p class="text-base sm:text-sm pb-10">
				Software Engineer
			</p>
		</div>
		
		<div class="flex justify-center">
			<a class="w-1/3 sm:w-40 flex justify-start items-center m-5 p-3 pl-8 sm:p-4 sm:m-4 bg-cyan-700 shadow-lg rounded-lg hover:bg-cyan-600" href="/blog">
				<img class="fill-black stroke-black size-8 sm:size-6" src="/linkIcons/blog.svg" alt="blog icon" />
				<p class="pl-4 text-lg sm:text-base">
					Blog
				</p>
			</a>
		</div>

		<div class="flex justify-center">
			<a class="w-1/3 sm:w-40 flex justify-start items-center m-5 p-3 pl-8 sm:p-4 sm:m-4 bg-cyan-700 shadow-lg rounded-lg hover:bg-cyan-600" href="https://github.com/thanover">
				<img class="fill-black stroke-black size-8 sm:size-6" src="/linkIcons/github.svg" alt="github icon" />
				<p class="pl-4 text-lg sm:text-base">
					GitHub
				</p>
			</a>
		</div>

		<div class="flex justify-center">
			<a class="w-1/3 sm:w-40 flex justify-start items-center m-5 p-3 pl-8 sm:p-4 sm:m-4 bg-cyan-700 shadow-lg rounded-lg hover:bg-cyan-600" href="https://www.linkedin.com/in/tomhanover/">
				<img class="fill-black stroke-black size-8 sm:size-6" src="/linkIcons/linkedin.svg" alt="linkedin icon" />
				<p class="pl-4 text-lg sm:text-base">
					LinkedIn
				</p>
			</a>
		</div>
	</div>
</BaseLayout>
